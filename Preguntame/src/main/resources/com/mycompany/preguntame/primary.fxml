<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="358.0" prefWidth="440.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.preguntame.PrimaryController">
   <children>
      <ImageView fx:id="imgTitle" fitWidth="400" preserveRatio="true" />
      
      <Label text="Número Máximo de Preguntas:" />
      <TextField fx:id="txtMaxQuestions" promptText="Ingrese el número máximo de preguntas" />
      
      <Button fx:id="btnStartGame" onAction="#startGame" text="Iniciar Juego" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
